{% extends 'base.html.twig' %}

{% block title %} {{ parent()}} | Nous contacter {% endblock %}

{% block body %}

<div class="contact_container">
    <form class="form" action="">
        <div class="form__field">
            <label for="lastname">Nom</label>
            <input class="form__field__input" type="text" name="lastname" id="lastname" placeholder="Doe">
        </div>
        <div class="form__field">
            <label for="firstname">Prénom</label>
            <input class="form__field__input" type="text" name="firstname" id="firstname" placeholder="John">
        </div>
        <div class="form__field">
            <label for="email">Email</label>
            <input class="form__field__input" type="email" name="email" id="email" placeholder="johndoe@email.com">
        </div>
        <div class="form__field">
            <label for="subject">Objet</label>
            <input class="form__field__input" type="text" name="subject" id="subject" placeholder="Demande">
        </div>
        <div class="form__field">
            <label for="message">Votre Message</label>
            <textarea class="form__field__input" name="message" id="message" cols="30" rows="5"></textarea>
        </div>
        <button class="form__button" type="button">Envoyer</button>
    </form>

    <div class="contact">
        <h2 class="contact__title">Nous contacter</h2>
        <p>
            Adresse : 70, rue des Jacobins, 80000 Amiens
        </p>
        <p>
            Tél : 09 86 27 17 04
        </p>
    </div>
</div>

{% endblock %}